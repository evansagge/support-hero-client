<div class="panel panel-success">
  <div class="panel-heading">
    <h4>My Schedule Swap Requests</h4>
  </div>
  <table class="table table-hover table-schedules">
    <thead>
      <tr>
        <th width='150'>Date</th>
        <th width='150'>Swap Date</th>
        <th>Requested User</th>
        <th>Status</th>
        <th width='150'>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
    {{#each swappedSchedules}}
    <tr>
      <td>{{format-date originalDate 'MMM D, YYYY'}}</td>
      <td>{{format-date targetDate 'MMM D, YYYY'}}</td>
      <td>{{link-to targetUser.name 'user' targetUser}}</td>
      <td>{{status}}</td>
      <td class='actions'>
        <a href="#" {{action 'cancelSwapRequest' this}} class="btn btn-danger btn-sm">
          Cancel
        </a>
      </td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>

