<div class="panel panel-success">
  <div class="panel-heading">
    <h4>Pending Swap Requests</h4>
  </div>
  <table class="table table-hover table-schedules">
    <thead>
      <tr>
        <th width='150'>Date</th>
        <th width='150'>Swap Date</th>
        <th>Requested By User</th>
        <th width='150'>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
    {{#each pendingSwappedSchedules}}
    <tr>
      <td>{{format-date targetDate 'MMM D, YYYY'}}</td>
      <td>{{format-date originalDate 'MMM D, YYYY'}}</td>
      <td>{{link-to originalUser.name 'user' originalUser}}</td>
      <td class='actions'>
        <a href="#" {{action 'rejectSwapRequest' this}} class="btn btn-danger btn-sm">
          Reject
        </a>
        <a href="#" {{action 'acceptSwapRequest' this}} class="btn btn-success btn-sm">
          Accept
        </a>
      </td>
    </tr>
    {{/each}}
    </tbody>
  </table>
</div>

