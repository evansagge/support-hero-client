 <form {{action 'authenticate' on='submit'}} class='form-signin' role='form'>
   <div class='text-center'><h1>Support Hero</h1></div>
   <hr />
   <h3><small>Please sign in</small></h3>
  {{input value=identification class='form-control' placeholder='Enter user name'}}
  {{input value=password class='form-control' placeholder='Enter password' type='password'}}
  <!-- <label class='checkbox'> -->
  <!--   {{input checked=rememberMe type='checkbox'}} Remember me -->
  <!-- </label> -->
  <button type="submit" class='btn btn-lg btn-primary btn-block'>Login</button>
</form>
{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Login failed:</strong> {{errorMessage}}
  </div>
{{/if}}
