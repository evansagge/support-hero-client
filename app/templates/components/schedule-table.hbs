<table class="table table-hover table-schedules">
  <thead>
    <tr>
      <th>Date</th>
      <th>Support Hero</th>
      <th width='200'>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  {{#each schedule in content itemController="schedule"}}
  <tr>
    <td>{{format-date schedule.date 'MMM D, YYYY'}}</td>
    <td>{{link-to schedule.user.name 'user' schedule.user}}</td>
    <td class='actions'>
        {{#if schedule.canEdit}}
          <a href="#" {{action 'markUndoable' schedule}} class="btn btn-danger btn-sm">
            Undoable
          </a>
          <a href="#" {{action 'swap' schedule}} class="btn btn-info btn-sm">
            Swap Schedule
          </a>
        {{/if}}
    </td>
  </tr>
  {{/each}}
  </tbody>
</table>
