<table class="table table-hover table-schedules">
  <thead>
    <tr>
      <th>Date</th>
      {{#if showUser}}
      <th>Support Hero</th>
      {{/if}}
      {{#if showActions}}
      <th width='200'>&nbsp;</th>
      {{/if}}
    </tr>
  </thead>
  <tbody>
  {{#each content}}
  <tr>
    <td>{{format-date date 'MMM D, YYYY'}}</td>
    {{#if controller.showUser}}
    <td>{{link-to user.name 'user' user}}</td>
    {{/if}}
    {{#if controller.showActions}}
    <td class='actions'>
      <a href="#" {{action 'markUndoable' this}} class="btn btn-danger btn-sm">
        Undoable
      </a>
      <a href="#" {{action 'swap' this}} class="btn btn-info btn-sm">
        Swap Schedule
      </a>
    </td>
    {{/if}}
  </tr>
  {{/each}}
  </tbody>
</table>
